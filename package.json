{
  "name": "sourcery",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} packages/database/prisma/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} packages/database/prisma/seed.ts"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
